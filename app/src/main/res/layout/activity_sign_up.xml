<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".sign_up">

    <TextView
        android:id="@+id/lets_plog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's plog"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:fontFamily="@font/suit_bold"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <EditText
        android:id="@+id/input_newId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="36dp"
        android:hint="아이디를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lets_plog"
        />

    <EditText
        android:id="@+id/input_newPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="15dp"
        android:hint="비밀번호를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/input_newId"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/input_rePw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="15dp"
        android:hint="비밀번호를 다시 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/input_newPw"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="15dp"
        android:hint="활동하는 동네를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/input_rePw"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="15dp"
        android:hint="이름을 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/town"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="15dp"
        android:hint="생년월일을 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="15dp"
        android:hint="전화번호를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/birthday"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/certificationNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        android:layout_marginTop="15dp"
        android:hint="인증번호를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/phoneNum"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="다음"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_bold"
        android:textSize="18sp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/certificationNum"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>