<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".forgot_pw">

    <TextView
        android:id="@+id/lets_plog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's plog!"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:id="@+id/pleaseInputId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찾고싶은 아이디를 입력해주세요."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lets_plog2"
        android:layout_marginTop="65dp"
        />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/pleaseInputId"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="아이디를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="30"
        android:maxLines="1"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/input_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/input_id"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="전화번호를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:password="true" />

    <Button
        android:id="@+id/next_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="다음"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_phoneNum"
        android:layout_marginTop="130dp" />

</androidx.constraintlayout.widget.ConstraintLayout>