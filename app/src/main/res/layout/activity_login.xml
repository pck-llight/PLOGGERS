<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="plog in"
        android:fontFamily="@font/suit_bold"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/plog_in" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/plog_in"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="아이디를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="30"
        android:maxLines="1"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/input_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/input_id"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="비밀번호를 입력해주세요"
        android:paddingStart="22dp"
        android:textColorHint="#D9D9D9"
        android:textSize="16sp"
        android:maxLength="16"
        android:maxLines="1"
        android:textColor="@color/white"
        android:password="true" />

    <Button
        android:id="@+id/signIn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="none"
        android:text="회원가입"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/input_pw"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/suit_regular"
        android:layout_marginEnd="29dp"/>

    <Button
        android:id="@+id/forgetPw_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="none"
        android:text="비밀번호를 잊어버리셨나요?"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/input_pw"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="36sp"/>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="로그인"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_pw"
        android:layout_marginTop="80dp" />


</androidx.constraintlayout.widget.ConstraintLayout>